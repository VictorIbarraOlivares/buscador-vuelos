import { 
  GET_FLIGHT_DETAIL_COMPLETE, 
  GET_FLIGHT_DETAIL_ERROR, 
  GET_FLIGHT_DETAIL_START 
} from "../actions/detail";

const initialState = {
  isLoading: false,
  data: {},
  error: {}
}

const detailReducer = (state = initialState, action) => {
  switch (action.type) {
    case GET_FLIGHT_DETAIL_START:
      return { ...state, isLoading: true, data: {} };
    case GET_FLIGHT_DETAIL_COMPLETE:
      return { ...state, isLoading: false, data: action.payload };
    case GET_FLIGHT_DETAIL_ERROR:
      return { ...state, isLoading: false, error: action.error };
    default:
      return state;
  }
};

export default detailReducer;